<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_cycrect_white_fill"
    android:orientation="horizontal">


    <android.support.constraint.Guideline
        android:id="@+id/lbs_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:id="@+id/lbs_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:id="@+id/lbs_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.6"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:id="@+id/lbs_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/lbs_iv_pic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/lbs_guideline2"
        app:layout_constraintDimensionRatio="456:324"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/lbs_guideline"
        app:srcCompat="@drawable/book_success" />

    <TextView
        android:id="@+id/lbs_tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_success"
        android:textColor="@color/color_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/lbs_guideline3" />

    <Button
        android:id="@+id/lbs_btn_confrm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_blue_fill"
        android:text="@string/text_main_ok"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintDimensionRatio="4:1"
        app:layout_constraintEnd_toEndOf="@id/lbs_iv_pic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/lbs_iv_pic"
        app:layout_constraintTop_toTopOf="@id/lbs_guideline4" />

</android.support.constraint.ConstraintLayout>
