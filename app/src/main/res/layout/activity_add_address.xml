<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activies.AddAddressActivity">

    <include
        android:id="@+id/include"
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/aa_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/aa_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <EditText
        android:id="@+id/et_add_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/hint_receiver_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/aa_guideline2"
        app:layout_constraintStart_toStartOf="@id/aa_guideline1"
        app:layout_constraintTop_toBottomOf="@id/include"
        app:layout_constraintVertical_bias="0.06"
        android:inputType="text" />

    <TextView
        android:id="@+id/aa_line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toStartOf="@id/aa_guideline2"
        app:layout_constraintStart_toStartOf="@id/aa_guideline1"
        app:layout_constraintTop_toBottomOf="@id/et_add_name" />

    <EditText
        android:id="@+id/et_add_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/hint_receiver_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/aa_guideline2"
        app:layout_constraintStart_toStartOf="@id/aa_guideline1"
        app:layout_constraintTop_toBottomOf="@id/aa_line1"
        app:layout_constraintVertical_bias="0.06"
        android:inputType="phone" />

    <TextView
        android:id="@+id/aa_line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toStartOf="@id/aa_guideline2"
        app:layout_constraintStart_toStartOf="@id/aa_guideline1"
        app:layout_constraintTop_toBottomOf="@id/et_add_phone" />

    <EditText
        android:id="@+id/et_add_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/hint_receiver_city"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/aa_guideline2"
        app:layout_constraintStart_toStartOf="@id/aa_guideline1"
        app:layout_constraintTop_toBottomOf="@id/aa_line2"
        app:layout_constraintVertical_bias="0.06"
        android:inputType="text" />

    <TextView
        android:id="@+id/aa_line3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toStartOf="@id/aa_guideline2"
        app:layout_constraintStart_toStartOf="@id/aa_guideline1"
        app:layout_constraintTop_toBottomOf="@id/et_add_city" />

    <EditText
        android:id="@+id/et_add_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/hint_receiver_city"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/aa_guideline2"
        app:layout_constraintStart_toStartOf="@id/aa_guideline1"
        app:layout_constraintTop_toBottomOf="@id/aa_line3"
        app:layout_constraintVertical_bias="0.06"
        android:inputType="text" />

    <TextView
        android:id="@+id/aa_line4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toStartOf="@id/aa_guideline2"
        app:layout_constraintStart_toStartOf="@id/aa_guideline1"
        app:layout_constraintTop_toBottomOf="@id/et_add_address" />

    <Button
        android:id="@+id/aa_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomButton"
        android:text="@string/text_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/aa_guideline2"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/aa_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/aa_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomButton"
        android:text="@string/text_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/aa_guideline2"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="@+id/aa_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.95"/>


</android.support.constraint.ConstraintLayout>