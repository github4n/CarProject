<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/rri_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@color/color_uc_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rri_tv_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_repaire_record_plate"
        android:textColor="@color/color_insurance_text"
        app:layout_constraintStart_toStartOf="@id/rri_tv_title"
        app:layout_constraintTop_toBottomOf="@id/rri_tv_title" />

    <TextView
        android:id="@+id/rri_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/color_insurance_text"
        app:layout_constraintStart_toEndOf="@id/rri_tv_plate"
        app:layout_constraintTop_toTopOf="@id/rri_tv_plate" />

    <TextView
        android:id="@+id/rri_tv_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/color_insurance_text"
        android:text="@string/text_repaire_record_model"
        app:layout_constraintStart_toStartOf="@id/rri_tv_title"
        app:layout_constraintTop_toBottomOf="@id/rri_tv_plate" />

    <TextView
        android:id="@+id/rri_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/color_insurance_text"
        app:layout_constraintStart_toEndOf="@id/rri_tv_model"
        app:layout_constraintTop_toTopOf="@id/rri_tv_model" />

    <TextView
        android:id="@+id/rri_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/color_insurance_text"
        android:text="@string/text_repaire_record_time"
        app:layout_constraintStart_toStartOf="@id/rri_tv_title"
        app:layout_constraintTop_toBottomOf="@id/rri_tv_model" />

    <TextView
        android:id="@+id/rri_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/color_insurance_text"
        app:layout_constraintStart_toEndOf="@id/rri_tv_time"
        app:layout_constraintTop_toTopOf="@id/rri_tv_time" />

    <TextView
        android:id="@+id/rri_tv_get_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/text_repaire_record_get_time"
        android:textColor="@color/color_insurance_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/rri_tv_title"
        app:layout_constraintTop_toBottomOf="@id/rri_tv_time" />

    <TextView
        android:id="@+id/rri_get_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/color_insurance_text"
        app:layout_constraintStart_toEndOf="@id/rri_tv_get_time"
        app:layout_constraintTop_toTopOf="@id/rri_tv_get_time" />
</android.support.constraint.ConstraintLayout>
