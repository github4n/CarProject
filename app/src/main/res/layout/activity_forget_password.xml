    <Button
        android:id="@+id/afp_btn_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_cycrect_blue_fill"
        android:text="@string/login_save"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/afp_guideline5"
        app:layout_constraintEnd_toStartOf="@id/afp_guideline2"
        app:layout_constraintStart_toStartOf="@id/afp_guideline"
        app:layout_constraintTop_toTopOf="@id/afp_guideline4" />

</android.support.constraint.ConstraintLayout>