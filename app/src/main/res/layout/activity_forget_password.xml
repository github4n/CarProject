<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activies.login.ForgetPasswordActivity">

    <include
        android:id="@+id/include"
        layout="@layout/layout_header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/afp_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/afp_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/afp_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/afp_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.74" />

    <android.support.constraint.Guideline
        android:id="@+id/afp_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <android.support.constraint.Guideline
        android:id="@+id/afp_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_reset_hint"
        android:textColor="@color/color_register_hello"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/afp_guideline"
        app:layout_constraintTop_toTopOf="@id/afp_guideline6" />

    <EditText
        android:id="@+id/afp_et_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/login_account"
        android:inputType="phone"
        android:maxLines="1"
        android:textColor="@color/color_sub_line"
        android:textColorHint="@color/color_sub_line"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/afp_guideline2"
        app:layout_constraintStart_toStartOf="@id/afp_guideline"
        app:layout_constraintTop_toTopOf="@id/afp_guideline3" />

    <ImageView
        android:id="@+id/afp_line"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/afp_guideline2"
        app:layout_constraintStart_toStartOf="@id/afp_guideline"
        app:layout_constraintTop_toBottomOf="@id/afp_et_phone"
        app:srcCompat="@color/color_sub_line" />

    <TextView
        android:id="@+id/afp_auth"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_blue"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/login_request_auth_number"
        android:textColor="@color/color_main"
        app:layout_constraintBottom_toBottomOf="@id/afp_et_auth"
        app:layout_constraintEnd_toStartOf="@id/afp_guideline2" />

    <EditText
        android:id="@+id/afp_et_auth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="@string/login_input_auth"
        android:inputType="phone"
        android:maxLines="1"
        android:textColor="@color/color_sub_line"
        android:textColorHint="@color/color_sub_line"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/afp_auth"
        app:layout_constraintStart_toStartOf="@id/afp_guideline"
        app:layout_constraintTop_toBottomOf="@id/afp_line" />

    <ImageView
        android:id="@+id/afp_line2"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/afp_guideline2"
        app:layout_constraintStart_toStartOf="@id/afp_guideline"
        app:layout_constraintTop_toBottomOf="@id/afp_et_auth"
        app:srcCompat="@color/color_sub_line" />

    <EditText
        android:id="@+id/afp_et_new_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="@string/login_input_new_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/color_sub_line"
        android:textColorHint="@color/color_sub_line"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/afp_guideline2"
        app:layout_constraintStart_toStartOf="@id/afp_guideline"
        app:layout_constraintTop_toBottomOf="@id/afp_line2" />

    <ImageView
        android:id="@+id/afp_line3"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/afp_guideline2"
        app:layout_constraintStart_toStartOf="@id/afp_guideline"
        app:layout_constraintTop_toBottomOf="@id/afp_et_new_password"
        app:srcCompat="@color/color_sub_line" />

