<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_cycrect_white_fill"
    android:orientation="horizontal">

    <android.support.constraint.Guideline
        android:id="@+id/lvi_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <android.support.constraint.Guideline
        android:id="@+id/lvi_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <TextView
        android:id="@+id/lvi_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/color_uc_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/lvi_line"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lvi_tv_name"
        app:srcCompat="@color/color_sub_line" />



    <TextView
        android:id="@+id/lvi_tv_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_violation_sum"
        app:layout_constraintEnd_toStartOf="@id/lvi_guideline2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lvi_line" />

    <TextView
        android:id="@+id/lvi_tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_violation_score"
        app:layout_constraintBottom_toBottomOf="@id/lvi_tv_sum"
        app:layout_constraintEnd_toStartOf="@id/lvi_guideline3"
        app:layout_constraintStart_toStartOf="@id/lvi_guideline2"
        app:layout_constraintTop_toTopOf="@id/lvi_tv_sum" />

    <TextView
        android:id="@+id/lvi_tv_fine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_violation_fine"
        app:layout_constraintBottom_toBottomOf="@id/lvi_tv_sum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/lvi_guideline3"
        app:layout_constraintTop_toTopOf="@id/lvi_tv_sum" />

    <ImageView
        android:id="@+id/lvi_line2"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lvi_tv_sum"
        app:srcCompat="@color/color_sub_line" />

</android.support.constraint.ConstraintLayout>
