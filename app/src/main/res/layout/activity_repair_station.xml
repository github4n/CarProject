<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activies.RepairStationActivity">

    <android.support.constraint.Guideline
        android:id="@+id/rs_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <android.support.constraint.Guideline
        android:id="@+id/rs_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <android.support.constraint.Guideline
        android:id="@+id/rs_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/rs_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/rs_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.89" />

    <android.support.constraint.Guideline
        android:id="@+id/rs_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/rs_guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/rs_tv_banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/rs_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rs_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/color_uc_text"
        app:layout_constraintStart_toStartOf="@id/rs_guideline3"
        app:layout_constraintTop_toTopOf="@id/rs_guideline" />

    <ImageView
        android:id="@+id/rs_iv_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/rs_guideline2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/rs_guideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rs_back" />

    <ImageView
        android:id="@+id/rs_iv_like"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/rs_guideline2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/rs_guideline4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rs_like1" />

    <TextView
        android:id="@+id/rs_tv_like_amount"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintStart_toEndOf="@id/rs_iv_like2"
        app:layout_constraintTop_toBottomOf="@id/rs_tv_title" />

    <ImageView
        android:id="@+id/rs_iv_like2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/rs_tv_like_amount"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/rs_guideline3"
        app:layout_constraintTop_toTopOf="@id/rs_tv_like_amount"
        app:srcCompat="@drawable/rs_like" />

    <TextView
        android:id="@+id/rs_tv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/text_station_contact"
        android:textColor="@color/color_text"
        app:layout_constraintStart_toStartOf="@id/rs_guideline3"
        app:layout_constraintTop_toBottomOf="@+id/rs_iv_like2" />

    <TextView
        android:id="@+id/rs_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/rs_tv_contact"
        app:layout_constraintBottom_toBottomOf="@id/rs_tv_contact"
        app:layout_constraintLeft_toRightOf="@id/rs_tv_contact" />

    <TextView
        android:id="@+id/rs_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/text_station_phone"
        android:textColor="@color/color_text"
        app:layout_constraintStart_toStartOf="@+id/rs_guideline3"
        app:layout_constraintTop_toBottomOf="@+id/rs_tv_contact" />

    <TextView
        android:id="@+id/rs_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/rs_tv_phone"
        app:layout_constraintBottom_toBottomOf="@id/rs_tv_phone"
        app:layout_constraintLeft_toRightOf="@id/rs_tv_phone" />

    <TextView
        android:id="@+id/rs_tc_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/text_station_address"
        android:textColor="@color/color_text"
        app:layout_constraintStart_toStartOf="@+id/rs_guideline3"
        app:layout_constraintTop_toBottomOf="@+id/rs_tv_phone" />

    <TextView
        android:id="@+id/rs_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/rs_tc_address"
        app:layout_constraintBottom_toBottomOf="@id/rs_tc_address"
        app:layout_constraintLeft_toRightOf="@id/rs_tc_address" />

    <TextView
        android:id="@+id/rs_btn_navi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/text_station_navi"
        android:textColor="@color/color_main"
        android:gravity="center"
        android:background="@drawable/shape_blue"
        app:layout_constraintBottom_toTopOf="@+id/rs_guideline6"
        app:layout_constraintEnd_toStartOf="@+id/rs_guideline7"
        app:layout_constraintStart_toStartOf="@+id/rs_guideline3"
        app:layout_constraintTop_toTopOf="@+id/rs_guideline5" />

    <TextView
        android:id="@+id/rs_btn_contact"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/color_main"
        android:text="@string/text_station_contact_shop"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/rs_guideline6"
        app:layout_constraintEnd_toStartOf="@id/rs_guideline4"
        app:layout_constraintStart_toStartOf="@id/rs_guideline7"
        app:layout_constraintTop_toTopOf="@id/rs_guideline5" />


</android.support.constraint.ConstraintLayout>