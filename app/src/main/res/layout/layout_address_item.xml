<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lai_line"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/lai_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lai_name"
        app:srcCompat="@color/color_sub_line" />

    <TextView
        android:id="@+id/lai_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_uc_text"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lai_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:textColor="@color/color_sub_line"
        app:layout_constraintBottom_toBottomOf="@+id/lai_name"
        app:layout_constraintStart_toEndOf="@+id/lai_name"
        app:layout_constraintTop_toTopOf="@+id/lai_name" />

    <TextView
        android:id="@+id/lai_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#FF7F7F"
        android:text="@string/text_my_car_default"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/lai_line"
        app:layout_constraintTop_toTopOf="@id/lai_phone" />

    <TextView
        android:id="@+id/lai_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:maxLines="2"
        android:textColor="@color/color_insurance_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lai_line"
        app:layout_constraintStart_toStartOf="@+id/lai_name"
        app:layout_constraintTop_toBottomOf="@+id/lai_name" />

    <TextView
        android:id="@+id/lai_edit"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:text="@string/text_address_edit"
        android:textSize="14sp"
        android:textColor="@color/color_sub_line"
        app:layout_constraintBottom_toBottomOf="@+id/lai_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lai_line"
        app:layout_constraintTop_toTopOf="@+id/lai_line" />
</android.support.constraint.ConstraintLayout>
